@model LoginUser

<div class="text-center">
    <h1 class="display-4">Login!</h1>
    <a href="/">Not Registered, Create Account here!</a>
</div>

<form asp-action="Loggin" asp-controller="Home">
    <div class="form-group">
        <label asp-for="LoginEmail"></label>
        <span class="text-danger font-weight-bold" asp-validation-for="LoginEmail"></span>
        <input class="form-control" asp-for="LoginEmail">
    </div>

    <div class="form-group">
        <label asp-for="LoginPassword"></label>
        <span class="text-danger font-weight-bold" asp-validation-for="LoginPassword"></span>
        <input class="form-control" asp-for="LoginPassword">
    </div>

    <button class="btn btn-info" type="submit">Login</button>

</form>
